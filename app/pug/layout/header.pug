block header
    header.header
        .container 
            .row 
                .col-lg-3.col-md-5.col-8
                    .header__logo
                        a.logo(href="#")
                            img(src="image/logo.svg", alt="logo")
                .col-xl-5.col-7.d-none.d-lg-block
                    .header__menu 
                        nav.menu 
                            ul.menu__block
                                li.menu__item
                                    a.menu__link.menu__link-active(href="#") HOME
                                        i.bi.bi-chevron-down
                                li.menu__item
                                    a.menu__link(href="#") PAGES
                                        i.bi.bi-chevron-down
                                li.menu__item
                                    a.menu__link(href="#") EVENTS
                                        i.bi.bi-chevron-down
                                li.menu__item
                                    a.menu__link(href="#") SPEAKERS
                                        i.bi.bi-chevron-down
                                li.menu__item
                                    a.menu__link(href="#") BLOG
                                        i.bi.bi-chevron-down
                                li.menu__item
                                    a.menu__link(href="#") SHOP
                                        i.bi.bi-chevron-down
                .col-xl-2.d-none.d-xl-flex.justify-content-end
                    .header__icons 
                        .header__search 
                            i.bi.bi-search 
                        .header__cart
                            i.bi.bi-bag
                .col-4.d-lg-none.d-flex.justify-content-end.align-items-center
                    .header__mbt
                        a(data-bs-toggle="offcanvas" href="#menu"  role="button")
                            i.bi.bi-list
                .col-lg-2.col-md-3.d-none.d-md-flex.justify-content-end
                    .header__btn
                        button.btn BUY TICKET
                .col-12.d-lg-none
                    .header__convas.offcanvas.offcanvas-start(data-bs-scroll="false" data-bs-backdrop="static" tabindex="-1" id="menu" aria-labelledby="menu")
                        button.header__close(type="button" data-bs-dismiss="offcanvas" aria-label="Close")
                            i.bi.bi-x-circle
                        .header__menu 
                            nav.menu.menu-header
                                ul.menu__block
                                    li.menu__item
                                        a.menu__link.menu__link-active(href="#") HOME
                                    li.menu__item
                                        a.menu__link(href="#") PAGES
                                    li.menu__item
                                        a.menu__link(href="#") EVENTS
                                    li.menu__item
                                        a.menu__link(href="#") SPEAKERS
                                    li.menu__item
                                        a.menu__link(href="#") BLOG
                                    li.menu__item
                                        a.menu__link(href="#") SHOP